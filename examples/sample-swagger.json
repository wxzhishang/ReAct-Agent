    "/products": {
      "get": {
        "operationId": "listProducts",
        "summary": "获取商品列表",
        "description": "获取所有商品的列表，支持分页、排序和筛选",
        "tags": ["商品管理"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "categoryId",
            "in": "query",
            "description": "分类 ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "minPrice",
            "in": "query",
            "description": "最低价格",
            "schema": {
              "type": "number"
